{
  "name": "recruit-crawler-back",
  "version": "1.1.5",
  "description": "backend for recruit-crawler-v2",
  "main": "src/index.ts",
  "engines": {
    "node": "18.16.0",
    "npm": "9.5.1"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch src/ src/index.ts",
    "start": "node ./dist/index.js",
    "commit-version": "git commit -am \"UPDATE v$(node -p \"require('./package.json').version\")\"",
    "deploy": "npm run build && yarn commit-version && git push && ctype apply",
    "deploy:patch": "yarn version --patch && yarn deploy",
    "deploy:minor": "yarn version --minor && yarn deploy",
    "deploy:major": "yarn version --major && yarn deploy"
  },
  "author": "Kyungbae Min",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "axios": "^1.6.2",
    "eslint": "^8.56.0",
    "global": "^4.4.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-compose": "^4.1.0",
    "koa-router": "^12.0.1",
    "prettier": "^3.1.1"
  },
  "devDependencies": {
    "@types/koa": "^2.13.12",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-compose": "^3.2.8",
    "@types/koa-router": "^7.4.8",
    "@types/koa__cors": "^4.0.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
